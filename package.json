	"private": true,
	"dependencies": {
		"@testing-library/jest-dom": "^5.11.4",
		"@testing-library/react": "^11.1.0",
		"@testing-library/user-event": "^12.1.10",
		"@types/jest": "^26.0.15",
		"@types/node": "^12.0.0",
		"@types/react": "^16.9.53",
		"@types/react-dom": "^16.9.8",
		"@types/redux-thunk": "^2.1.0",
		"@uiw/react-radio": "^4.7.12",
		"autoprefixer": "^10.2.3",
		"axios": "^0.21.1",
		"cogo-toast": "^4.2.3",
		"formik": "^2.2.6",
		"node-sass": "4.14.1",
		"react": "^17.0.1",
		"react-dom": "^17.0.1",
		"react-redux": "^7.2.2",
		"react-router-dom": "^5.2.0",
		"react-scripts": "4.0.1",
		"redux": "^4.0.5",
		"redux-thunk": "^2.3.0",
		"tailwindcss": "^2.0.2",
		"typescript": "^4.0.3",
		"web-vitals": "^0.2.4",
		"yup": "^0.32.8"
	},
	"scripts": {
		"build:css": "postcss src/scss/tailwind.scss -o src/scss/index.scss",
		"start": "npm run build:css && react-scripts start",
		"build": "npm run build:css && react-scripts build",
		"test": "react-scripts test",
		"eject": "react-scripts eject",
		"format": "prettier --write .",
		"check": "prettier --check .",
		"build:surge": "npm run build && cd build && cp index.html 200.html && surge --domain=https://thefashionhub.surge.sh"
	},
	"husky": {
		"hooks": {
			"pre-commit": "yarn run format && git add ."
		}
	},
	"eslintConfig": {
		"extends": [
			"react-app",
			"react-app/jest"
		]
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"devDependencies": {
		"@types/react-redux": "^7.1.16",
		"@types/react-router-dom": "^5.1.7",
		"@types/redux": "^3.6.0",
		"@types/yup": "^0.29.11",
		"husky": "^5.1.3",
		"postcss": "^8.2.4",
		"postcss-cli": "^8.3.1",
		"prettier": "^2.2.1"
	}
